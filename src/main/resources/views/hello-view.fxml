<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>

<?import javafx.scene.canvas.Canvas?>
<HBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Main.HelloController">
  <VBox spacing="20.0" alignment="BASELINE_LEFT">
    <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="WelcomeText" text="Welcome to the UML Diagram Builder" />

    <!-- Existing buttons -->
    <Button text="Add Class" onAction="#onAddClassDiagramClick"/>
    <Button text="Add Use Case" onAction="#onAddUseCaseClick"/>
    <Button text="Add Interface" onAction="#onAddInterfaceDiagramClick"/>
    <Button text="Save First Uml Object" onAction="#onSaveFirstUmlObject"/>
    <Button text="Load Diagram" onAction="#onLoadDiagram"/>
    <Button fx:id="deleteButton" text="Delete" onAction="#onDeleteClick"/>

    <!-- New buttons for drawing lines -->
    <Button text="Draw Association" onAction="#onDrawAssociationClick"/>
    <Button text="Draw Inheritance" onAction="#onDrawInheritanceClick"/>
    <Button text="Draw Aggregation" onAction="#onDrawAggregationClick"/>
    <Button text="Draw Composition" onAction="#onDrawCompositionClick"/>
    <Button text="Save ClassDiagram" onAction="#onSaveClassDiagram"/>

    <!-- StackPane to center the canvas -->
  </VBox>
  <StackPane>
    <Pane fx:id="canvas" prefWidth="500" prefHeight="800"/>
  </StackPane>
</HBox>
